<% title "mubs index" %>

<div class="span-15 prepend-1 colborder">
	<h6><%= :'blog list'.t %></h6>
	<% for blog in @blogs %>	
		<div class="span-9"><%= link_to blog.name, blog_articles_path(blog) %></div>
		<div class="span-2"><%= link_to 'Show', blog %></div>
		<div class="span-2"><%= link_to 'Edit', edit_blog_path(blog) %></div>
		<div class="span-2 last">
			<%= link_to 'Destroy', blog, :confirm => 'Are you sure?', :method => :delete %>
		</div>
	<% end %>
</div>

<div class="span-7 last">
	<%#= render :partial => 'shared/login' %>
	<%= render :file => 'sessions/new', :use_full_path => true %>
</div>

<hr>
<hr class="space">



