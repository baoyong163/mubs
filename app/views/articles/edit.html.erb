<h1>Editing article</h1>

<%#= error_messages_for :article %>
<% if @blog %>
<% form_for([@blog, @article]) do |f| %>
  <%= render :partial => 'form' , :object => f%>
  <p>
    <%= f.submit :Update.t %>
  </p>
<% end %>
<% else %>
<% form_for(@article) do |f| %>
  <%= render :partial => 'form' , :object => f %>
  <p>
    <%= f.submit :Update.t %>
  </p>
<% end %>
<% end %>
<%= link_to :Show.t, @article %> |
