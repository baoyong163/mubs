<% if logged_in? -%>
  <div id="user-bar-greeting" style="display:inline;">
    <%= :"Logged in as".t %> <%= link_to_current_user :content_method => :login %>
  </div>
  <div id="user-bar-action" style="display:inline;">
  <%= link_to :"log out".t, logout_path, { :title => :"Log out".t } %>
  </div>
<% else -%>
  <div id="user-bar-greeting" style="display:inline;">
  <%= link_to_login_with_IP :'Not logged in'.t, :style => 'border: none;' %>
  </div>
  <div id="user-bar-action" style="display:inline;">
  <%= link_to :"Log in".t,  login_path,  { :title => :"Log in".t } %>
  <%= link_to :"Sign up".t, signup_path, { :title => :"Create an account".t } %>
  </div>
<% end -%>
