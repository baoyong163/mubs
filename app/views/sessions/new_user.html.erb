<h1><%= :'Sign up as a new user'.t %></h1>

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>

<% form_for :user, :url => users_path do |f| -%>
	<%= render :partial => 'form', :object => f %>

	<div class="span-4 last" >
		<%= f.submit :'Sign up'.t %>
	</div>
<% end -%>


<hr />